<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:id="@+id/carvView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#707070"
    app:cardCornerRadius="10dp">
    <View
        android:id="@+id/notesPriority"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/red_circle"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/notesST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i am md df fg fg fg fg fg fg fg fg  b f fg f fgb fg b fgb fgb fgb fgb  fg  fgbfg b b b"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/notesDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="25 March 2022"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>